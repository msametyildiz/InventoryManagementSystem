@model IEnumerable<CategoryType>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CategoryType" asp-action="CreateType" class="btn btn-primary ">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New CategoryType
            </a>
        </div>
    </div>
    <br/><br/>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th scope="col">Type</th >
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td scope="col">@obj.Type</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="CategoryType" asp-action="EditType" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="CategoryType" asp-action="DeleteType" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                        <a asp-controller="Category" asp-action="Index" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Select</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>